generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String
  password  String
  deleted Boolean? @default(false)
  role Int @default(1)
  places  Place[]  // Relacionamento um para muitos com Place
}

model Place {
  id    Int     @default(autoincrement()) @id
  name  String
  show_on_totem Boolean? @default(false)
  userId       Int       // Campo da chave estrangeira
  user         User      @relation(fields: [userId], references: [id])
}